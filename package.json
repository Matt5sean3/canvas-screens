{
  "name": "canvas-screens",
  "version": "0.0.1",
  "description": "A library for managing rendering, events, and media for seperate game screens or states.",
  "keywords": [
    "HTML5",
    "canvas",
    "game"
  ],
  "bugs": {
    "url": "https://github.com/Matt5sean3/canvas-screens/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Matthew Balch",
    "email": "matbalch@vt.edu"
  },
  "files": [],
  "dependencies": {},
  "devDependencies": {
    "broccoli": "^0.16.9",
    "broccoli-cli": "^1.0.0",
    "broccoli-concat": "^2.2.0",
    "broccoli-docco": "0.0.12",
    "broccoli-funnel": "^1.0.2",
    "broccoli-merge-trees": "^1.1.1",
    "broccoli-rollup": "0.0.4",
    "canvas": "^1.4.0",
    "chai": "^3.5.0",
    "eventtarget": "^0.1.0",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "scripts": {
    "build": "node_modules/broccoli-cli/bin/broccoli build build",
    "prepublish": "npm run build",
    "clean": "rm -r build",
    "lint": "node_modules/jshint/bin/jshint src test",
    "register": "cd node_modules; ln -s .. canvas-screens; cd ..",
    "deregister": "rm node_modules/canvas-screens",
    "build-tests": "cd test; ../node_modules/broccoli-cli/bin/broccoli build build; cd ..",
    "clean-tests": "rm -r test/build",
    "mocha-test": "node_modules/mocha/bin/mocha test/build/test",
    "pretest": "npm run register; npm run build-tests",
    "test": "npm run lint; npm run mocha-test",
    "posttest": "npm run deregister; npm run clean-tests"
  },
  "main": "build/commonjs/canvas-screens.js",
  "jsnext:main": "build/es6/canvas-screens.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matt5sean3/canvas-screens.git"
  }
}
